{
  "name": "cntdys",
  "version": "0.1.0",
  "description": "more calendar for less bytes",
  "keywords": [
    "calendar"
  ],
  "author": "Ziga Vidic <zigomir@gmail.com> (https://zigomir.com/)",
  "license": "MIT",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "scripts": {
    "lint": "tslint --project tsconfig.json --type-check **/*.ts",
    "test:dev": "jest --watch",
    "test": "npm run lint && jest",
    "dev": "tsc --watch",
    "build": "tsc && minify dist/main.js --out-file dist/main.min.js && cp dist/src/main.js dist/main.js && rm -rf dist/src && rm -rf dist/test"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^21.0.0",
    "babel-minify": "^0.2.0",
    "jest": "^21.2.1",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.3"
  }
}
