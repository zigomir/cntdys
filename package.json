{
  "name": "cntdys",
  "version": "0.2.6",
  "description": "more calendar for less bytes",
  "keywords": [
    "calendar"
  ],
  "author": "Ziga Vidic <zigomir@gmail.com> (https://zigomir.com/)",
  "license": "MIT",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/types/src/main.d.ts",
  "files": [
    "dist/"
  ],
  "bundlesize": [
    {
      "path": "./dist/main.min.js",
      "maxSize": "666 B"
    }
  ],
  "scripts": {
    "lint": "tslint --project tsconfig.json **/*.ts",
    "test:dev": "jest --watch",
    "test": "npm run lint && jest --coverage --mapCoverage",
    "dev": "tsc --watch",
    "size": "gzip-size dist/main.min.js",
    "build": "tsc && minify dist/main.js --out-file dist/main.min.js && cp dist/src/main.js dist/main.js && rm -rf dist/src && rm -rf dist/test",
    "prepublishOnly": "bundlesize && npm run test && npm run build"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.1.0",
    "babel-minify": "^0.2.0",
    "bundlesize": "^0.15.3",
    "gzip-size-cli": "^2.1.0",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  }
}
