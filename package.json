{
  "name": "cntdys",
  "version": "0.3.2",
  "description": "more calendar for less bytes",
  "keywords": [
    "calendar"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zigomir/cntdys.git"
  },
  "homepage": "https://github.com/zigomir/cntdys",
  "author": "Ziga Vidic <zigomir@gmail.com> (https://zigomir.com/)",
  "license": "MIT",
  "main": "dist/main.commonjs.js",
  "module": "dist/main.js",
  "type": "module",
  "types": "dist/types/src/main.d.ts",
  "files": [
    "dist/"
  ],
  "bundlesize": [
    {
      "path": "./dist/main.min.js",
      "maxSize": "666 B"
    }
  ],
  "scripts": {
    "test": "uvu -r ts-node/register test",
    "test:dev": "watchlist src test -- yarn test",
    "test:coverage": "c8 --include=src yarn test",
    "dev": "tsc --watch",
    "clean": "rm -rf build/* && rm -rf dist/*",
    "build:commonjs": "tsc --module CommonJS && cp build/src/main.js dist/main.commonjs.js",
    "build:esm": "tsc && cp build/src/main.js dist/main.js && terser --module --compress --mangle -- dist/main.js > dist/main.min.js",
    "build": "yarn clean && yarn build:commonjs && yarn build:esm",
    "prepublishOnly": "yarn test"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "bundlesize": "^0.18.0",
    "c8": "^7.3.1",
    "terser": "^5.3.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "uvu": "^0.3.3",
    "watchlist": "^0.2.3"
  }
}
